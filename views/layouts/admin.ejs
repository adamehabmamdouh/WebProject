<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="<%= C:\Users\laptop\Desktop\WebProject\public\css %>">
</head>
<body>
    <nav>
        <ul>
            <li><a href="#">Dashboard</a></li>
            <li><a href="#" id="usersButton">Users</a></li>
            <li><a href="#">Reports</a></li>
        </ul>
    </nav>

    <main>
        <h2>Welcome, Admin!</h2>
        <p>Here is where you can manage your website and view important information.</p>

        <div id="userList" class="card" style="display: none;">
            <h3>Users</h3>
            <table id="userTable">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="userTableBody">
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.name %></td>
                            <td><%= user.email %></td>
                            <td><button onclick="deleteUser('<%= user.id %>')">Delete</button></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            <button onclick="hideUserList()">Close Users List</button>
        </div>
    </main>

    <footer>
        <p>&copy; 2025 Admin Panel. All Rights Reserved.</p>
    </footer>
    <script src="<%= C:\Users\laptop\Desktop\WebProject\public\js %>"></script>
</body>
</html>