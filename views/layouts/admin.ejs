<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="/css/admin.css">
   
</head>
<body>
    <nav>
        <ul>
            <li><a href="/admin">Dashboard</a></li>
            <li><a href="#" id="usersButton">Users</a></li>
            <li><a href="/logout">Logout</a></li>
        </ul>
    </nav>

    <main>
        <h2>Welcome, Admin!</h2>
        <p>Here is where you can manage your website and view important information.</p>

        <!-- Add User Form -->
        <div class="card">
            <h3>Add New User</h3>
            <form id="addUserForm" class="admin-form">
                <div class="form-group">
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="username" required>
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" required>
                </div>
                <div class="form-group">
                    <label for="confirmPassword">Confirm Password:</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" required>
                </div>
                <div class="form-group checkbox-group">
                    <label>
                        <input type="checkbox" id="isAdmin" name="isAdmin">
                        Make this user an admin
                    </label>
                </div>
                <button type="submit" class="add-btn">Add User</button>
            </form>
        </div>

        <!-- Users List -->
        <div id="userList" class="card">
            <h3>Users</h3>
            <table id="userTable">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="userTableBody">
                    <% if (users && users.length > 0) { %>
                        <% users.forEach(user => { %>
                            <tr data-user-id="<%= user._id %>">
                                <td><%= user.username %></td>
                                <td><%= user.email %></td>
                                <td><%= user.isAdmin ? 'Admin' : 'User' %></td>
                                <td>
                                    <button onclick="deleteUser('<%= user._id %>')" class="delete-btn">Delete</button>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="4">No users found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </main>

    <script src="/js/admin.js"></script>
</body>
</html>